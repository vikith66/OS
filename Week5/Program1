#include <iostream>
#include <unistd.h>
using namespace std;
int main(){
        int n;
        cout<<"Enter the number of elements: ";
        cin>>n;
        int arr[n];
        cout<<"Enter the elements: ";
        for(int i=0;i<n;i++){
                cin>>arr[i];
        }
        pid_t pid=fork();
        if(pid>0){
                cout<<"Parent Process: "<<getpid()<<endl;
                cout<<"Unsorted Array Elements"<<endl;
                for(int k=0;k<n;k++){
                        cout<<arr[k]<<"   ";
                }
        }else if(pid==0){
                cout<<"\nChild Process Id : "<<getpid()<<endl;
                cout<<"Sorted Array Elements : "<<endl;
                for(int i=0;i<n-1;i++){
                for(int j=0;j<n-i-1;j++){
                        if(arr[j]>arr[j+1]){
                                int temp=arr[j];
                                arr[j]=arr[j+1];
                                arr[j+1]=temp;
                        }
                }}
                for(int a=0;a<n;a++){
                        cout<<arr[a]<<"   ";
                }
        }else{
                cout<<"Fork Failed"<<endl;
        }
        return 0;
}
